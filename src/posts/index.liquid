---
title: Dan's Blog
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---

{% layout "surround/base.liquid" %}

{% block content %}
    <div class="section">
        <h2>Blog Posts</h2>
        {% for post in posts  %}
            <article>
                <h3 class="is-marginless is-paddingless">
                    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                </h3>
                <i>{{ post.date | date: "%B %d %Y" }}</i>
            </article>
        {% endfor %}
    </div>

    <style>
        h3 {
            margin-bottom: 5px;
        }

        article {
            margin-bottom: 25px;
        }
    </style>
{% endblock content %}
